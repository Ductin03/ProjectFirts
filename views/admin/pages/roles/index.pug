extends ../../layouts/default.pug
include ../../mixins/alert.pug
block main
    +alert-success(5000)
    +alert-error(5000)
    .card.mb-3
        .card-header Nhóm Quyền
            .card-body
                .row
                    .col-8          
                    .col-4
                        a(href=`${fixadmin}/roles/create`
                        class="btn btn-outline-success"
                        ) +Thêm mới
                table(
                    class="table table-hover table-sm"
                    checkbox-multi
                )
                    thead
                        tr  
                            th 
                                input(type="checkbox", name="checkall")
                            th STT
                            th Nhóm quyền
                            th Mô tả
                            th Hành động
                    tbody
                        each item, index in record
                            tr
                                td 
                                    input(
                                        type="checkbox"
                                        name="id"
                                        value=item.id
                                        )
                                td #{index+1}
                                td #{item.title}
                                td #{item.description}
                                td
                                    a(
                                    href=`${fixadmin}/roles/edit/${item.id}`
                                    class="btn btn-warning btn-sm") Sửa

                                    button(
                                    class="btn btn-danger btn-sm ml-1"
                                    button-delete
                                    remove-id=item.id
                                    ) Xóa
    form(action="",
        method="POST",
        id="form-delete-roles",
        data-path=`${fixadmin}/roles/delete`
        ) 
        
        script(src="/admin/js/remove_roles.js") 