extends ../../layouts/default.pug
include ../../mixins/alert.pug
include ../../mixins/select-tree.pug
block main
    //-enctype="multipart/form-data" BỎ THUỘC TÍNH NÀY VÀO FORM ĐỂ UPLOAD ẢNH 
    +alert-success(5000)
    +alert-error(5000)
    h1(class="mb-4") Chỉnh sửa sản phẩm
    form(
        action=`${fixadmin}/products/edit/${EditProduct.id}?_method=PATCH`
        id="form-edit-product"
        method="POST"

        enctype="multipart/form-data"
    )
        div(class="form-group")
            label(for="title") Tiêu đề
            input(
                type="text"
                class="form-control"
                id="title"
                name="title"
                value=EditProduct.title
            )
        div(class="form-group")
            label(for="parent_product_id") Danh mục
            select(
                    class="form-control"
                    id="parent_product_id"
                    name="parent_product_id"
                )
                    option(value="") ---Chọn danh mục---
                    if(category)
                        +select-Tree(category)

        div(class="form-group")
            label(for="desc") Mô tả
            textarea(
                class="form-control textarea-mce"
                id="desc"
                name="description"
                rows="5"
                ) #{EditProduct.description}

        div(class="form-group")
            label(for="price") Giá
            input(
                type="number" "number"
                class="form-control"
                id="price"
                name="price"
                value=EditProduct.price
                min="0"
        )
        div(class="form-group")
            label(for="discount") % Giảm giá
            input(
                type="number"
                class="form-control"
                id="discount"
                name="discountPercentage"
                value=EditProduct.discountPercentage
                min="0"
        )
        div(class="form-group")
            label(for="stock") Số lượng
            input(
                type="number"
                class="form-control"
                id="stock"
                name="stock"
                value=EditProduct.stock
                min="0"
        )
        div(class="form-group"
            upload-image
        )
            label(for="thumbnail") Ảnh
            input(
                type="file"
                class="form-control-file"
                id="thumbnail"
                name="thumbnail"
                accept="image/*"
                upload-image-input
        )
            img(
            src=EditProduct.thumbnail,
            upload-image-preview
            class="image-preview"
            )
            
        div(class="form-group")
            label(for="position") Vị trí
            input(
                type="number"
                class="form-control"
                id="position"
                name="position"
                placeholder="Tự động tăng"
                min="1"
                value=EditProduct.position
        )
        div(class="form-group form-check form-check-inline")
            input(
                type="radio"
                class="form-check-input"
                id="statusActive"
                name="status"
                value="active"
                checked=(EditProduct.status=="active")? true: false
        )
            label(for="statusActive" class="form-check-label") Hoạt động

        div(class="form-group form-check form-check-inline")
            input(
                type="radio"
                class="form-check-input"
                id="statusInActive"
                name="status"
                value="inactive"
                checked=(EditProduct.status=="inactive")? true: false
        )
            label(for="statusInActive" class="form-check-label") Dừng hoạt động
            
        div(class="form-group")
            button(
                type="submit"
                class="btn btn-primary"
                )   Cập nhật

        script(src="/admin/js/product.js")