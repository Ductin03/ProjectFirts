mixin alert-success(time)
    - if (messages.success)
        .message.success
            div(class="alert alert-success"
                data-time=time
                Show-alert
            ) #{messages.success} <span close-alert>X</span>
mixin alert-error(time)
    - if (messages.error)
        .message.error
            div(class="alert alert-danger"
                data-time=time
                Show-alert
            ) #{messages.error} <span close-alert>X</span>