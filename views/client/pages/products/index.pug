extends ../../layouts/default.pug
include ../../mixins/box-head-mixin.pug

block main
    .container.my-3
      .row
        .col-12
            +box-head("Trang Sản phẩm")

      .row
        each item in Pageproduct
          .col-4.mb-3
            .product-item
              .inner-image   
                  img(
                    src=item.thumbnail
                    alt=item.title
                )
              .inner-content 
                h3.inner-title
                  a(href=`products/${item.slug}`)  #{item.title}
                .inner-price-new #{item.priceNew}$
                .inner-price-old #{item.price}$
                .inner-discount -#{item.discountPercentage}%
